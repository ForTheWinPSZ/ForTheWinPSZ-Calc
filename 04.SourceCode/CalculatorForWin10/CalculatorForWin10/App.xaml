                <ResourceDictionary Source="./Styles/BinaryButton.xaml" />
                <ResourceDictionary Source="./Styles/ExtensionButton.xaml" />
                <ResourceDictionary Source="./Styles/ExtensionMButton.xaml" />
                <ResourceDictionary Source="./Styles/MemoryListItem.xaml" />
