<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CalculatorForWin10.Styles">
    <Style x:Key="HistoryListitemStyle" TargetType="ListBoxItem">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Background="Transparent" Margin="-5,0,0,0">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup>
                                <VisualState x:Name="animation">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="q" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1"
                                                         To="0"
                                                         Duration="0:0:0001"/>
                                        <DoubleAnimation Storyboard.TargetName="q" 
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0"
                                                         To="1"
                                                         Duration="0:0:1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <StackPanel x:Name="q" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="-5,0,0,20" Height="67">
                            <TextBlock Margin="0,7,15,0" TextWrapping="Wrap" Text="{Binding Path=Expression}" FontSize="13" HorizontalAlignment="Right" TextAlignment="Right" Foreground="#5F5F5F" Width="{Binding ElementName=z,Path=ActualWidth}"></TextBlock>
                            <TextBlock Foreground="Black" Margin="0,10,15,10" Text="{Binding Path=Result}" FontWeight="Bold" FontSize="22" HorizontalAlignment="Right" TextAlignment="Right" Width="{Binding ElementName=z,Path=ActualWidth}"></TextBlock>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="q" Property="Background" Value="#CFCFCF"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>